<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BootanimationActivity" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BootanimationActivity" >
    

    <Button
        android:id="@+id/button1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:onClick="downloadJB"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:text="Download" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:text="Jelly Bean"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:onClick="runJB"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:text="Install" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Button02"
        android:layout_alignBottom="@+id/Button02"
        android:layout_alignLeft="@+id/Button01"
        android:onClick="runICS"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:text="Install" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Button02"
        android:layout_marginTop="9dp"
        android:text="SkyDragon"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView02"
        android:layout_toLeftOf="@+id/Button03"
        android:onClick="downloadSD"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:text="Download" />

    <Button
        android:id="@+id/Button05"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Button04"
        android:layout_alignBottom="@+id/Button04"
        android:layout_alignLeft="@+id/Button03"
        android:onClick="runSD"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:text="Install" />

    <Button
        android:id="@+id/Button06"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView03"
        android:layout_toLeftOf="@+id/Button05"
        android:onClick="downloadCM10"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:text="Download" />

    <Button
        android:id="@+id/Button07"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Button05"
        android:layout_below="@+id/TextView03"
        android:onClick="runCM10"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:text="Install" />

    <Button
        android:id="@+id/Button08"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView04"
        android:onClick="downloadCM9"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:text="Download" />

    <Button
        android:id="@+id/Button09"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Button08"
        android:layout_alignBottom="@+id/Button08"
        android:layout_toRightOf="@+id/Button08"
        android:onClick="runCM9"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:text="Install" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Ice Cream Sandwich"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_toLeftOf="@+id/Button03"
        android:onClick="downloadICS"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:text="Download" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button04"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="CyanogenMod 10"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button06"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="CyanogenMod 9"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Button
        android:id="@+id/Button012"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button08"
        android:layout_alignRight="@+id/Button09"
        android:layout_below="@+id/Button08"
        android:onClick="runCustom"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:text="Install custom bootanimation" />
    
    <TextView
        android:id="@+id/TextView0001"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button012"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Button012"
        android:layout_below="@+id/Button012"
        android:text="Place your bootanimation in /sdcard/SkyDragon/Bootanimation, rename it to bootanimation.zip and hit the above button to install your chosen bootanimation!" />

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg" />

</RelativeLayout>

</ScrollView>