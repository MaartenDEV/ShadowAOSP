<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RosieActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/button2"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:onClick="runRosie5"
        android:padding="0dp"
        android:text="5 Panel Rosie" />

    <Button
        android:id="@+id/button2"
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:onClick="runRosie7"
        android:text="7 Panel Rosie" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/Button02"
        android:layout_centerVertical="true"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:onClick="runRosie5"
        android:padding="0dp"
        android:text="4x4" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Button01"
        android:layout_centerHorizontal="true"
        android:text="App drawers"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:onClick="runRosie5x5"
        android:padding="0dp"
        android:text="5x5" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/button1"
        android:layout_alignTop="@+id/Button03"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:onClick="runRosie5x4"
        android:padding="0dp"
        android:text="5x4" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/Button03"
        android:layout_centerVertical="true"
        android:background="@drawable/button"
        android:focusable="true"
        android:clickable="true"
        android:onClick="runRosie4x5"
        android:padding="0dp"
        android:text="4x5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:text="A reboot is recommended"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>